{
  "manifest_version": 2,

  "name": "__MSG_ext_name__",
  "version": "0.1",
  "default_locale": "ru",

  "icons": {"16":  "icons/16.png",
            "48":  "icons/48.png",
            "128": "icons/128.png"},

  "permissions": [
    "tabs",
    "notifications"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.999dice.com/*"],
      "js": ["/app/injector.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "/com/options.js",
    "/app/config.js",
    "/app/options.js",
    "/app/script.js"
  ],

  "background": {
    "scripts": [
      "/com/options.js",
      "/app/config.js",
      "/app/background.js"
    ]
  },

  "externally_connectable": {
    "matches": ["https://www.999dice.com/*"]
  },

  "options_page": "options.html"
}
